<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.HorizontalLayoutContents.HorizontalLayoutView"
             Title="{Binding Title}">
    
    <HorizontalStackLayout>
        <BoxView WidthRequest="100"
                 HeightRequest="100"
                 Color="Red" />

        <BoxView WidthRequest="100"
                 HeightRequest="100"
                 Color="Green" />

        <BoxView WidthRequest="100"
                 HeightRequest="100"
                 Color="Blue" />

        <BoxView VerticalOptions="End"
                 WidthRequest="100"
                 HeightRequest="100"
                 Color="Purple" />
    </HorizontalStackLayout>
</ContentPage>